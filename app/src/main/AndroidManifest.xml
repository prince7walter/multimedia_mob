<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miagae.multimedia">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Multimedia">
        <activity android:name=".classe_activity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".etudiant_activity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".mail_activity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".sms_activity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".SplashScrennActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Multimedia.NoActionBar"/>
    </application>

</manifest>